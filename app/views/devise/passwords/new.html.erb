<div class="col-lg-4 mx-auto">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"email@example.com" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "Send me reset password instructions", class:"btn btn-primary w-100" %>
    </div>
  <% end %>

  <br>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Back to Login", new_session_path(resource_name), class:"d-flex justify-content-center link-secondary" %><br />
  <% end %>
</div>