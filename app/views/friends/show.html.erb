<div class="mt-4 p-5 bg-light rounded">
  <h1><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.instagram %></p>
  <br>
  <% if @friend.user == current_user %>
    <div class="hstack gap-3">
      <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %>
      <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-danger" %>
    </div> 
  <% end %>
</div>

<br><br>